@model IEnumerable<OdeToFood.Data.Models.Restaurant>

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <div>There are @Model.Count() restaurants available.</div>
    <hr />
    <ul>
        @foreach (var restaurant in Model)
        {
            <li style="margin: 4px;">
                @restaurant.Name
                <br />
                @restaurant.Cuisine
            </li>
        }
    </ul>
</div>